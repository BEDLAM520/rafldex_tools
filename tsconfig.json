{
	"compilerOptions": {
		"jsx": "react",
		"types": ["node", "react", "react-dom"],
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["*"]
		},
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"module": "esnext",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*",
		"pages/**/*",
		"components/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
